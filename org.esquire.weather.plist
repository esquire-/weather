
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>org.johnheenan.weather</string>

    <key>ProgramArguments</key>
    <array>
      <string>/usr/bin/python</string>
      <string>[location of your copy of weather.py]</string>
    </array>

    <key>StartInterval</key>
    <integer>10</integer>

    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/> 
 </dict>
</plist>
